<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RoutesActivity">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/route1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="148dp"
            android:background="@drawable/buttonshape3"
            android:fontFamily="@font/rose"
            android:text="경로 1"
            android:textSize="55sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/route2"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="44dp"
            android:background="@drawable/buttonshape3"
            android:fontFamily="@font/rose"
            android:text="경로 2"
            android:textSize="55sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/route3"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="240dp"
            android:background="@drawable/buttonshape3"
            android:fontFamily="@font/rose"
            android:text="경로 3"
            android:textSize="55sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/UnityAR_btn"
            android:layout_width="158dp"
            android:layout_height="121dp"
            android:layout_marginEnd="44dp"
            android:background="@drawable/buttonshape3"
            android:fontFamily="@font/rose"
            android:text="AR 길찾기"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/route2"
            app:layout_constraintVertical_bias="0.047" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="279dp"
            android:layout_height="205dp"
            android:layout_marginTop="416dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ttokki" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="#FFDDE8">

        <ImageButton
            android:id="@+id/screenmap"
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:layout_margin="0sp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="0sp"
            app:srcCompat="@drawable/map1"
            android:contentDescription="TODO" />


        <ImageButton
            android:id="@+id/screenroute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0sp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="0sp"
            app:srcCompat="@drawable/search1"
            android:contentDescription="TODO" />

        <ImageButton
            android:id="@+id/screensetting"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_margin="0sp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="0sp"
            app:srcCompat="@drawable/setting1"
            android:contentDescription="TODO" />


    </LinearLayout>


</LinearLayout>